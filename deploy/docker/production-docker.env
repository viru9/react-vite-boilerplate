# Docker Production Environment Configuration
# Use this file with docker-compose -f docker-compose.prod.yml --env-file deploy/docker/production-docker.env up

# Frontend Configuration
VITE_API_BASE_URL=https://api.yourdomain.com/api/v1
VITE_WS_BASE_URL=wss://api.yourdomain.com
VITE_APP_NAME=React Boilerplate Production
VITE_TOKEN_KEY=auth_token
VITE_REFRESH_TOKEN_KEY=refresh_token
VITE_API_TIMEOUT=30000
VITE_ENVIRONMENT=production

# Nginx Configuration
NGINX_HOST=yourdomain.com
BACKEND_HOST=backend_app_prod
BACKEND_PORT=8000

# Docker Configuration
COMPOSE_PROJECT_NAME=frontend-prod
COMPOSE_FILE=docker-compose.prod.yml

# Logging
LOG_LEVEL=warn
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# Resource Limits
MEMORY_LIMIT=512m
CPU_LIMIT=1.0
RESTART_POLICY=unless-stopped

# Network Configuration
FRONTEND_NETWORK=frontend_prod_network

# Volume Configuration
SSL_CERT_PATH=./ssl
NGINX_LOG_PATH=./logs/nginx

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s

# Build Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Security
DOCKER_CONTENT_TRUST=1
