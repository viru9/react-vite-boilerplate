# Frontend Production Environment Configuration
# Copy this file to .env in your project root before building for production

# API Configuration
VITE_API_BASE_URL=https://api.yourdomain.com/api/v1
VITE_WS_BASE_URL=wss://api.yourdomain.com
VITE_API_TIMEOUT=30000

# Authentication
VITE_TOKEN_KEY=auth_token
VITE_REFRESH_TOKEN_KEY=refresh_token

# Application Configuration
VITE_APP_NAME=Your App Name
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Your app description

# Environment
VITE_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# Analytics (if using)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Error Reporting (if using Sentry)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=1.0.0

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# Logging
VITE_LOG_LEVEL=error
VITE_ENABLE_CONSOLE_LOGS=false

# Cache Configuration
VITE_CACHE_VERSION=1.0.0
VITE_ENABLE_SERVICE_WORKER=true

# Build Configuration
VITE_BUILD_MODE=production
VITE_MINIFY=true
VITE_SOURCE_MAP=false

# CDN Configuration (if using)
VITE_CDN_BASE_URL=https://cdn.yourdomain.com

# Social Media & SEO
VITE_APP_URL=https://yourdomain.com
VITE_APP_LOGO=https://yourdomain.com/logo.png
VITE_TWITTER_HANDLE=@yourhandle
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# Contact Information
VITE_SUPPORT_EMAIL=support@yourdomain.com
VITE_CONTACT_PHONE=+1-234-567-8900

# Legal
VITE_PRIVACY_POLICY_URL=https://yourdomain.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# External Services
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Maintenance Mode
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please check back soon.

# Regional Configuration
VITE_DEFAULT_LOCALE=en-US
VITE_DEFAULT_TIMEZONE=America/New_York
VITE_DEFAULT_CURRENCY=USD

# Performance Optimization
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_LAZY_LOADING=true
VITE_CHUNK_SIZE_LIMIT=1000

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
